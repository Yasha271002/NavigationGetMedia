<UserControl x:Class="NavifationGetMedia.View.Popup.ObjectNamePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavifationGetMedia.View.Popup"
             mc:Ignorable="d" >
    <Border
        Width="1200"
        Height="724"
        Style="{DynamicResource PopupBorder}">
            <StackPanel
                Margin="72">
                <Border Style="{DynamicResource PopupTextBlockBorder}">
                    <TextBlock Style="{DynamicResource CategoryPopupStyle}"/>
                </Border>
                <TextBlock Style="{DynamicResource TextBlockDepartametStyle}"
                           TextAlignment="Center"/>
                <TextBlock Style="{DynamicResource DescriptionPopupStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <Button Template="{DynamicResource ButtonTemplatePopup}"/>
                    <Button Template="{DynamicResource ButtonTemplatePopup}"/>
                </StackPanel>
            </StackPanel>
    </Border>
</UserControl>
