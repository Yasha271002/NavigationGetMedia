<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CustomKeyboard.Views;assembly=CustomKeyboard"
                    xmlns:controls="clr-namespace:CustomKeyboard.Views.Controls;assembly=CustomKeyboard">
    <Style TargetType="{x:Type controls:KeyboardKeyButton}">
        <Setter Property="HighlightedBackground" Value="{DynamicResource MainColor}"/>
        <Setter Property="HighlightedForeground" Value="White"/>
        <Setter Property="FontSize" Value="33.7"/>
    </Style>
</ResourceDictionary>